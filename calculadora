# Uma calculadora básica em python
# IDE https://colab.research.google.com/

def calculadora(num1, num2, operacao):
  if(operacao == 1):
    return num1 + num2
  if(operacao == 2):
    return num1 - num2
  if(operacao == 3):
    return num1 * num2
  elif(operacao == 4):
      if num2 != 0:
          return num1 / num2
      else:
          return "Erro: divisão por zero"
  else:
       return  0
resultado = calculadora(20, 5, 2)
print(resultado)
